<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ee.ria.EstEIDUtility"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-feature android:name="android.hardware.usb.host" />

    <uses-permission android:name="com.hidglobal.ia.omnikey.service.permission.SMARTCARDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!--Do we need this?-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".DashboardMenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SigningActivity"
            android:label="@string/title_activity_signing"
            android:parentActivityName=".DashboardMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ee.ria.EstEIDUtility.DashboardMenuActivity" />
        </activity>
        <activity
            android:name=".ManageEidsActivity"
            android:label="@string/title_activity_manage_eids"
            android:parentActivityName=".DashboardMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ee.ria.EstEIDUtility.DashboardMenuActivity" />
        </activity>
        <activity
            android:name=".PinUtilitiesActivity"
            android:label="@string/title_activity_pin_utilities"
            android:parentActivityName=".DashboardMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ee.ria.EstEIDUtility.DashboardMenuActivity" />
        </activity>
        <activity
            android:name=".activity.BrowseContainersActivity"
            android:label="@string/title_activity_browse_containers"
            android:parentActivityName=".DashboardMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ee.ria.EstEIDUtility.DashboardMenuActivity" />
        </activity>
        <activity android:name=".activity.BdocDetailActivity"
            android:label="@string/bdoc_detail_title"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.BrowseContainersActivity"
            />

        <activity
            android:name="com.dropbox.core.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask" >
            <intent-filter>

                <data android:scheme="db-APP_KEY" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>