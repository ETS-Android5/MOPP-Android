<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Application" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

    <style name="Theme.Application.Launch">
        <item name="android:windowBackground">@drawable/launch_bg</item>
    </style>

    <style name="ThemeOverlay.Application.Dark" parent="ThemeOverlay.AppCompat.Dark">
    </style>

    <style name="ThemeOverlay.Application.Dark.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

</resources>
