<resources>

    <style name="Widget.Application.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primaryDark</item>
    </style>

    <style name="Widget.Application.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/bottomNavigation</item>
        <item name="itemTextColor">@drawable/navigation_item_color</item>
        <item name="itemIconTint">@drawable/navigation_item_color</item>
    </style>

    <style name="Widget.Application.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/material_color_white</item>
    </style>

    <style name="Widget.Application.Button.ButtonBar" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="Widget.Application.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:tint">@color/material_color_white</item>
    </style>

    <style name="Widget.Application.Subheader" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/material_subheader_text_size</item>
        <item name="android:textColor">@color/material_subheader_text_color_default</item>
        <item name="android:minHeight">@dimen/material_subheader_height</item>
        <item name="android:paddingStart">@dimen/material_subheader_padding_start</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Application.ProgressBar" parent="Widget.AppCompat.ProgressBar">
    </style>

</resources>
