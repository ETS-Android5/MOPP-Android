<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary">

    <LinearLayout
        android:id="@id/signatureUpdateSignatureRemoveContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/material_list_text_first_position_margin_start"
            android:text="@string/signature_update_signature_remove_text" />

        <ImageButton
            android:id="@id/signatureUpdateSignatureRemoveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_list_icon_last_position_margin_horizontal"
            android:layout_marginEnd="@dimen/material_list_icon_last_position_margin_horizontal"
            android:padding="16dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/signature_update_documents_remove_button"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/signatureUpdateSignatureContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/material_baseline_grid_2.5x"
        android:paddingBottom="@dimen/material_baseline_grid_2.5x"
        android:background="@drawable/selectable_item_background_white">

        <ImageView
            android:id="@id/signatureUpdateSignatureValidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_list_icon_first_position_margin_start"
            android:layout_marginEnd="@dimen/material_list_icon_first_position_margin_start"
            android:src="@drawable/ic_check_circle"
            android:tint="@color/success"
            android:contentDescription="@string/signature_update_signature_valid" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/material_list_text_last_position_margin_end"
            android:orientation="vertical">

            <TextView
                android:id="@id/signatureUpdateSignatureName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="Mari Maasikas, 48405050123" />

            <TextView
                android:id="@id/signatureUpdateSignatureCreatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItemSecondary"
                tools:text="01 June 2015 13:45" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
