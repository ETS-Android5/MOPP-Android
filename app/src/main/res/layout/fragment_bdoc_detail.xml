<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_browse_containers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="12dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/bdocImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/digidoc" />

        <ImageView
            android:id="@+id/editBdoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:src="@drawable/ic_mode_edit_black_18dp" />

        <TextView
            android:id="@+id/listDocName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/bdocImg"
            android:layout_toLeftOf="@+id/editBdoc"
            android:layout_toRightOf="@+id/bdocImg"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="File name.bdoc"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/listDocLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listDocName"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/bdocImg"
            android:layout_toRightOf="@+id/bdocImg"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Asukoht: " />

        <TextView
            android:id="@+id/dbocInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listDocLocation"
            android:layout_toRightOf="@+id/bdocImg"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Vorming: BDOC | Suurus: 700 kb" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/bdocSignaturesTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/detailButtonsLayout"
        android:layout_below="@+id/headerLayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="3dp">

            <LinearLayout
                android:id="@+id/filesListLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/bdocFilesTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/files_title"
                        android:textAppearance="?android:panelTextAppearance"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/addFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/bdocFilesTitle"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:text="@string/addFile"
                        android:textAppearance="?android:textAppearanceSmall"/>

                    <View
                        android:id="@+id/infoSeparator"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/addFile"
                        android:background="#c0c0c0" />

                    <TextView android:id="@id/android:empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FF0000"
                        android:visibility="invisible"
                        android:layout_below="@+id/bdocFilesTitle"
                        android:text="No data"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/signaturesListLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/bdocSignaturesTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/signatures_title"
                        android:textAppearance="?android:panelTextAppearance"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/addSignature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/bdocSignaturesTitle"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:text="@string/addFile"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <View
                        android:id="@+id/filesSeparator"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/addSignature"
                        android:background="#c0c0c0" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/detailButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#4CBD0B"
            android:text="@string/send"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>