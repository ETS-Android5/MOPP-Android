<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:paddingStart="12dp"
    android:paddingTop="10dp"
    tools:context="ee.ria.EstEIDUtility.fragment.BdocDetailFragment">

    <ImageView
        android:id="@+id/bdocImg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/digidoc" />

    <ImageView
        android:id="@+id/editBdoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="5dp"
        android:src="@drawable/ic_mode_edit_black_18dp" />

    <TextView
        android:id="@+id/listDocName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/bdocImg"
        android:layout_toLeftOf="@+id/editBdoc"
        android:layout_toRightOf="@+id/bdocImg"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="File name.bdoc"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/listDocLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/listDocName"
        android:layout_toEndOf="@+id/bdocImg"
        android:layout_toRightOf="@+id/bdocImg"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Asukoht: " />

    <TextView
        android:id="@+id/dbocInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/listDocLocation"
        android:layout_toRightOf="@+id/bdocImg"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Vorming: BDOC | Suurus: 700 kb" />

    <TextView
        android:id="@+id/bdocFilesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dbocInfo"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/files_title"
        android:textAppearance="?android:panelTextAppearance"
        android:textSize="20sp" />

    <View
        android:id="@+id/infoSeparator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/dbocInfo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/bdocFilesTitle"
        android:background="#c0c0c0" />

    <LinearLayout
        android:id="@+id/filesListLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bdocFilesTitle"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/bdocSignaturesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/filesListLayout"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/signatures_title"
        android:textAppearance="?android:panelTextAppearance"
        android:textSize="20sp" />

    <View
        android:id="@+id/filesSeparator"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_below="@+id/filesListLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/bdocSignaturesTitle"
        android:background="#c0c0c0" />

    <LinearLayout
        android:id="@+id/signaturesListLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bdocSignaturesTitle"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/create_new" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4CBD0B"
            android:text="@string/send"
            android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>
