<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="ee.ria.EstEIDUtility.fragment.BdocSignaturesFragment"
    android:id="@+id/signaturesLayout">

    <ImageView
        android:id="@+id/signatureImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/personName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/signatureImage"
        android:layout_toLeftOf="@+id/removeSignature"
        android:layout_toRightOf="@+id/signatureImage"
        android:maxLines="1"
        android:text="Name Surname"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/fileSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/personName"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/signatureImage"
        android:maxLines="1"
        android:text="Allkirjustatud 14 oktoober 2015" />

    <TextView
        android:id="@+id/signed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fileSize"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/signatureImage"
        android:layout_toRightOf="@+id/signatureImage"
        android:maxLines="1"
        android:text="Allkiri on " />

    <TextView
        android:id="@+id/isSigned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/fileSize"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/signed"
        android:maxLines="1"
        android:text="kehtiv" />

    <ImageView
        android:id="@+id/removeSignature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@drawable/ic_clear_black_18dp" />

</RelativeLayout>
