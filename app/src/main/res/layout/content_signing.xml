<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_signing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ee.ria.EstEIDUtility.activity.SigningActivity"
    tools:showIn="@layout/activity_signing">

    <include
        android:id="@+id/messages"
        layout="@layout/messages" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/messages">

        <EditText
            android:id="@+id/textToSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:enabled="true"
            android:hint="Enter file name"
            android:inputType="text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/add_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textToSign"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:onClick="createNewContainer"
            android:text="Add container"
            app:layout_constraintLeft_toLeftOf="@+id/textToSign"
            app:layout_constraintTop_toBottomOf="@+id/textToSign" />
    </RelativeLayout>
</RelativeLayout>