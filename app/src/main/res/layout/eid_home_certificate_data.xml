<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout"
    tools:layout_width="match_parent"
    tools:layout_height="match_parent"
    tools:orientation="vertical">

    <TextView
        android:id="@id/eidHomeCertificateDataTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/eid_home_certificate_data_title_auth" />

    <TextView
        android:id="@id/eidHomeCertificateDataValidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/eid_home_certificate_data_valid" />

    <Button
        android:id="@id/eidHomeCertificateDataButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eid_home_certificate_data_button_change_auth" />

    <TextView
        android:id="@id/eidHomeCertificateDataLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/eid_home_certificate_data_link_auth" />

    <TextView
        android:id="@id/eidHomeCertificateDataError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/eid_home_certificate_data_error_auth" />

</merge>
