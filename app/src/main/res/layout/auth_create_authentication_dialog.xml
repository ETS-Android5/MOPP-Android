<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
            android:id="@id/authCreateAuthenticateProgressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@id/authCreateAuthenticateVerificationCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="50dp"/>


        <TextView
                android:id="@id/authCreateAuthenticateProgressMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/auth_create_authenticate_progress_message_initial"/>

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
            android:id="@id/authCreateAuthenticateContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/auth_create_authenticate_message"/>

        <TextView
                android:id="@id/authCreateAuthenticateData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="Miko VÃ¤li (38802132727)"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/auth_create_authenticate_pin1"
                android:labelFor="@id/authCreateAuthenticatePin1"/>

        <EditText
                android:id="@id/authCreateAuthenticatePin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:inputType="numberPassword"
                android:maxLength="12"/>

        <TextView
                android:id="@id/authCreateAuthenticatePin1Error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Application.Error"
                android:text="@string/auth_create_authenticate_pin1_invalid"
                android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>
