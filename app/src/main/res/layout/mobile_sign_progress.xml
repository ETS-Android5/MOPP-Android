<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:visibility="gone">

        <TextView
            android:text="request sent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signing_progress_text"
            android:textAlignment="center" />

        <TextView
            android:text="Control Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobile_sign_control_code"
            android:textAppearance="@android:style/TextAppearance.Material.Display2"
            android:textAlignment="center" />

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobile_sign_progress_bar" />

        <TextView
            android:text="Make sure the control code above matches with the one in your phone screen and enter Mobile-ID PIN2-code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobile_sign_info"
            android:textAlignment="center" />

</LinearLayout>